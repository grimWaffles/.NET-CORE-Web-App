@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}

<h1>Index - Borrowed Items</h1>

@if (Model.Count() > 0)
{
    <br />
    <br />

    @foreach (var item in Model)
    {
        <h5>Item ID: @item.Id</h5>
        <br />
        <h5>Item Borrower: @item.Borrower</h5>
        <br />
        <h5>Item Lender: @item.Lender</h5>
        <br />
        <h5>Item: @item.ItemName</h5>
        <br />
        <br />
    }
}

